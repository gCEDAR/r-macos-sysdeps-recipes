Package: poppler
Version: 23.04.0
Source.URL: https://poppler.freedesktop.org/poppler-${ver}.tar.xz
Depends: tiff, openjpeg, cairo, boost
Build-system: cmake
Configure: -DENABLE_UTILS=OFF --prefix=/${prefix} -DCMAKE_EXE_LINKER_FLAGS="`pkg-config --static --libs cairo libtiff-4`" -DCMAKE_C_FLAGS="`pkg-config --cflags cairo libtiff-4`"
