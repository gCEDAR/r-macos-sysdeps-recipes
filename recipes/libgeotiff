Package: libgeotiff
Version: 1.7.1
Depends: jpeg, tiff, proj (>= 6.0)
Source.URL: https://github.com/OSGeo/libgeotiff/releases/download/${ver}/libgeotiff-${ver}.tar.gz
Build-system: cmake
Configure: -DWITH_UTILITIES=OFF -DCMAKE_EXE_LINKER_FLAGS="`pkg-config --static --libs libtiff-4`" -DCMAKE_C_FLAGS="`pkg-config --cflags libtiff-4`"
